root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.java]
indent_size = 4
max_line_length = 120

[*.xml]
indent_size = 2
max_line_length = 120

[*.{gradle,groovy}]
indent_size = 4
max_line_length = 120

[*.{html,js,css,scss}]
indent_size = 2

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.sql]
indent_size = 2
